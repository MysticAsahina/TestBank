
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
<style>
body {
    background: linear-gradient(50deg, #000a4f 0%, #b38f00 100%);
    background-attachment: fixed;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow-y: auto;
    overflow-x: hidden;
    margin: 0;
    padding: 40px 0;
}

label, p {
    color: #fff;
}

.card-body.p-4 {
    padding: 0 12rem 3rem 12rem !important;
}

.logo-bg {
    position: absolute;
    right: -300px;
    width: 800px;
    height: 800px;
    opacity: 0.25;
    z-index: -1000;
    animation: fadeFromRight 3s ease forwards;
}

@keyframes fadeFromRight {
    0% {
        opacity: 0;
        transform: translateX(100px);
    }
    100% {
        opacity: 0.25;
        transform: translateX(0);
    }
}

.login-card {
    background: rgba(255, 255, 255, 0);
    border-radius: 100px;
    box-shadow:
        5px 5px 10px 5px rgba(0, 0, 0, 0.1),
        inset 3px 3px 20px 0px rgba(255, 255, 255, 0.5);
    overflow: hidden;
    animation: fadeFromBottom 1.5s ease forwards;
    opacity: 0;
    width: 100%;
    
    /* Glare effect variables */
    --gh-width: 100%;
    --gh-height: 100%;
    --gh-bg: transparent;
    --gh-br: 100px;
    --gh-border: transparent;
    --gh-angle: 135deg;
    --gh-rgba: rgba(255, 255, 255, 0.4);
    --gh-duration: 0.6s;
    --gh-size: 200%;
    
    position: relative;
}

.login-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
        var(--gh-angle),
        transparent 40%,
        var(--gh-rgba) 50%,
        transparent 60%
    );
    transition: var(--gh-duration) ease;
    background-size: 300% 300%;
    background-repeat: no-repeat;
    background-position: -100% -100%;
    border-radius: inherit;
    pointer-events: none;
}

.login-card:hover::before {
    background-position: 100% 100%;
}
.col-md-6{
    width: 800px !important;
}
@keyframes fadeFromBottom {
    0% {
        opacity: 0;
        transform: translateY(80px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

.login-header {
    display: flex;
    flex-direction: column;
    color: white;
    padding: 30px;
    text-align: center;
}

.login-header h2 {
    font-size: 1rem;
    font-weight: 700;
    margin-bottom: 0;
}

.login-header p {
    font-size: .8rem;
}

.login-header img {
    height: 7em;
    width: 7em;
    margin-bottom: 10px;
    align-self: center;
}

.role-badge {
    font-size: 0.8em;
    padding: 4px 12px;
    border-radius: 20px;
}

.form-control:focus {
    border-color: #ea6666;
    box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
}

.btn-login {
    background: #23314C;
    border: none;
    padding: 12px;
    font-weight: 600;
}

.btn-login:hover {
    background-color: #00c8ff;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
}

.text-decoration-none {
    color: #ffffff;
}

.text-center.mb-3 a {
    display: block;
    text-align: right;
}

.text-center.mb-3 a:hover,
.text-decoration-none.fw-bold:hover {
    text-decoration: underline !important;
}

</style>
</head>
<body>
      <img src="./images/logo_college.png" alt="Logo" class="logo-bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="login-card">
                    <div class="login-header">
                        <img src="/images/phinma_logo.png" alt="PHINMA Logo" class="me-2" >
                        <h2>PHINMA EDUCATION</h2>
                        <p class="mb-0">MAKING LIVES BETTER THROUGH EDUCATION</p>
                    </div>
                    
                    <div class="card-body p-4">
                        <!-- Error Message -->
                        <% if (typeof error !== 'undefined' && error) { %>
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <%= error %>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        <% } %>

                        <!-- Success Message -->
                        <% if (typeof success !== 'undefined' && success) { %>
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle me-2"></i>
                                <%= success %>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        <% } %>

                        <form id="loginForm" action="/auth/login" method="POST">
                            <div class="mb-3">
                                <label for="userID" class="form-label">
                                    <i class="fas fa-id-card me-2"></i>ID Number
                                </label>
                                <input type="text" class="form-control" id="userID" name="userID" 
                                       placeholder="Enter your ID" required>
                                
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">
                                    <i class="fas fa-lock me-2"></i>Password
                                </label>
                                <input type="password" class="form-control" id="password" name="password" 
                                       placeholder="Enter your password" required>
                            </div>
                            <div class="text-center mb-3">
                                <a href="/forgot-password" class="text-decoration-none">
                                    <i class="fas fa-key me-1"></i>Forgot Password?
                                </a>
                            </div>

                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-login text-white">
                                    <i class="fas fa-sign-in-alt me-2"></i>Login
                                </button>
                            </div>

                            

                            <div class="text-center">
                                <p class="mb-0">Don't have an account? 
                                    <a href="/register" class="text-decoration-none fw-bold">Register</a>
                                </p>
                            </div>
                        </form>

                        
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status"></span> Logging in...';
            submitBtn.disabled = true;
        });

        // Auto-detect ID type and show hint
        document.getElementById('userID').addEventListener('input', function(e) {
            const id = e.target.value;
            const hint = document.getElementById('idHint');
            
            if (id.includes('-') && id.match(/\d{2}-\d{4}-\d{6}/)) {
                this.style.borderColor = '#198754';
            } else if (id.length > 0) {
                this.style.borderColor = '#ffc107';
            } else {
                this.style.borderColor = '';
            }
        });
    </script>
</body>
</html>
