<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Test Bank System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<style>
    .navbar.navbar-expand-lg.navbar-dark {
        background: linear-gradient(135deg, #001a8f 0%, #d4cc26 100%) !important;
    }
</style>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="#">
                <i class="fas fa-graduation-cap me-2"></i>Test Bank System
            </a>
            <div class="navbar-nav ms-auto">
                <span class="navbar-text me-3">
                    Welcome, <%= user.fullName %> (Dean)
                </span>
                <form action="/auth/logout" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/dean/dashboard">
                                <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/dean/manage-accounts">
                                <i class="fas fa-users-cog me-2"></i>Manage Accounts
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/dean/tests">
                                <i class="fas fa-file-alt me-2"></i>Test Management
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/dean/student-performance">
                                <i class="fas fa-chart-line me-2"></i>Student Performance
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/dean/reports">
                                <i class="fas fa-chart-bar me-2"></i>Reports & Analytics
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/dean/account">
                                <i class="fas fa-user-cog me-2"></i>My Account
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2"><i class="fas fa-chart-line me-2"></i><%= title %></h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <button class="btn btn-outline-primary me-2">
                            <i class="fas fa-download me-2"></i>Export Report
                        </button>
                    </div>
                </div>

                <!-- Search Filters -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Search by Student</label>
                                <input type="text" class="form-control" placeholder="Enter student name or ID">
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Course</label>
                                <select class="form-select">
                                    <option value="">All Courses</option>
                                    <option value="CS101">Computer Science</option>
                                    <option value="MATH202">Mathematics</option>
                                    <option value="PHY101">Physics</option>
                                </select>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Professor</label>
                                <select class="form-select">
                                    <option value="">All Professors</option>
                                    <option value="1">Dr. Maria Santos</option>
                                    <option value="2">Prof. Juan Cruz</option>
                                </select>
                            </div>
                        </div>
                        <button class="btn btn-primary">Apply Filters</button>
                    </div>
                </div>

                <!-- Performance Overview -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card text-white bg-primary">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>85%</h4>
                                        <p>Overall Average</p>
                                    </div>
                                    <i class="fas fa-chart-line fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-success">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>92%</h4>
                                        <p>Top Performance</p>
                                    </div>
                                    <i class="fas fa-trophy fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-warning">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>15</h4>
                                        <p>Need Improvement</p>
                                    </div>
                                    <i class="fas fa-exclamation-triangle fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-info">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>78%</h4>
                                        <p>Completion Rate</p>
                                    </div>
                                    <i class="fas fa-check-circle fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Charts -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Performance by Course</h5>
                            </div>
                            <div class="card-body">
                                <canvas id="coursePerformanceChart" height="250"></canvas>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Score Distribution</h5>
                            </div>
                            <div class="card-body">
                                <canvas id="scoreDistributionChart" height="250"></canvas>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Student Performance Table -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Student Performance Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Student ID</th>
                                        <th>Name</th>
                                        <th>Course</th>
                                        <th>Test Taken</th>
                                        <th>Average Score</th>
                                        <th>Best Score</th>
                                        <th>Weak Areas</th>
                                        <th>Progress</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>01-2324-042431</td>
                                        <td>Juan Dela Cruz</td>
                                        <td>BS Computer Science</td>
                                        <td>8</td>
                                        <td>92%</td>
                                        <td>98%</td>
                                        <td>None</td>
                                        <td>
                                            <div class="progress" style="height: 8px;">
                                                <div class="progress-bar bg-success" style="width: 92%"></div>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>01-2324-042432</td>
                                        <td>Maria Santos</td>
                                        <td>BS Mathematics</td>
                                        <td>6</td>
                                        <td>85%</td>
                                        <td>92%</td>
                                        <td>Algebra</td>
                                        <td>
                                            <div class="progress" style="height: 8px;">
                                                <div class="progress-bar bg-warning" style="width: 85%"></div>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>01-2324-042433</td>
                                        <td>Pedro Reyes</td>
                                        <td>BS Physics</td>
                                        <td>5</td>
                                        <td>78%</td>
                                        <td>85%</td>
                                        <td>Thermodynamics</td>
                                        <td>
                                            <div class="progress" style="height: 8px;">
                                                <div class="progress-bar bg-warning" style="width: 78%"></div>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>01-2324-042434</td>
                                        <td>Ana Lim</td>
                                        <td>BS Computer Science</td>
                                        <td>7</td>
                                        <td>88%</td>
                                        <td>95%</td>
                                        <td>Data Structures</td>
                                        <td>
                                            <div class="progress" style="height: 8px;">
                                                <div class="progress-bar bg-success" style="width: 88%"></div>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Initialize charts
        document.addEventListener('DOMContentLoaded', function() {
            // Course Performance Chart
            const courseCtx = document.getElementById('coursePerformanceChart').getContext('2d');
            new Chart(courseCtx, {
                type: 'bar',
                data: {
                    labels: ['Computer Science', 'Mathematics', 'Physics', 'Engineering', 'Biology'],
                    datasets: [{
                        label: 'Average Score (%)',
                        data: [88, 82, 79, 85, 81],
                        backgroundColor: [
                            'rgba(54, 162, 235, 0.8)',
                            'rgba(255, 99, 132, 0.8)',
                            'rgba(255, 206, 86, 0.8)',
                            'rgba(75, 192, 192, 0.8)',
                            'rgba(153, 102, 255, 0.8)'
                        ]
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100
                        }
                    }
                }
            });

            // Score Distribution Chart
            const distributionCtx = document.getElementById('scoreDistributionChart').getContext('2d');
            new Chart(distributionCtx, {
                type: 'pie',
                data: {
                    labels: ['90-100%', '80-89%', '70-79%', '60-69%', 'Below 60%'],
                    datasets: [{
                        data: [35, 45, 15, 3, 2],
                        backgroundColor: [
                            'rgba(75, 192, 192, 0.8)',
                            'rgba(54, 162, 235, 0.8)',
                            'rgba(255, 206, 86, 0.8)',
                            'rgba(255, 159, 64, 0.8)',
                            'rgba(255, 99, 132, 0.8)'
                        ]
                    }]
                },
                options: {
                    responsive: true
                }
            });
        });
    </script>
</body>
</html>